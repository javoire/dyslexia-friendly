{
  "name": "Dyslexia Friendly",
  "version": "2.3.0",
  "manifest_version": 3,
  "description": "Increases readability of websites by changing to easier-to-read fonts and adding visual enhancements",
  "icons": {
    "16": "img/icon-16.png",
    "128": "img/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "action": {
    "default_icon": {
      "19": "img/icon-19.png",
      "38": "img/icon-38.png"
    },
    "default_title": "Make the website dyslexia friendly",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["css/fonts.css", "css/contentscript.css"],
      "js": ["contentscript.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; img-src 'self' data: w3.org/svg/2000"
  },
  "permissions": [
    "background",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "fonts/*"
    ],
    "matches": [
      "*://*/*"
    ]
  }]
}
