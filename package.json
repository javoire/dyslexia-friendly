{
  "name": "dyslexia-friendly",
  "version": "1.0.0",
  "description": "Increases readability of web pages by changing fonts, contrast and adding a reading ruler",
  "type": "module",
  "dependencies": {
    "jquery": "^3.5.0",
    "materialize-css": "^1.0.0-rc.2",
    "string-replace-loader": "^3.1.0"
  },
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "build-dev": "NODE_ENV=development webpack",
    "package": "./utils/package.sh",
    "start": "yarn start-website",
    "website": "NODE_ENV=development webpack-dev-server --config-name='website'",
    "extension": "NODE_ENV=development webpack-dev-server --config-name='extension'",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "lint": "eslint src",
    "format": "prettier --write src/**/*.js",
    "deploy": "firebase deploy"
  },
  "devDependencies": {
    "@eslint/js": "^9.6.0",
    "@jest/globals": "^29.7.0",
    "@tailwindcss/postcss": "^4.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^27.2.1",
    "file-loader": "^6.2.0",
    "firebase-tools": "^13.20.1",
    "fs-extra": "7.0.1",
    "globals": "^15.7.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.4.2",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss": "^8.5.1",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.3",
    "prettier": "^3.3.2",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^8.0.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.9",
    "tw-elements": "^2.0.0",
    "webpack": "^5.94.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "webpack-string-replacer": "^0.0.20",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "prettier": {
    "singleQuote": true
  }
}
